<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= typeof title !== 'undefined' ? title : 'HCS Sync' %></title>
    <% if (typeof csrfToken !== 'undefined' && csrfToken) { %>
      <meta name="csrf-token" content="<%= csrfToken %>" />
    <% } %>
    <link rel="stylesheet" href="/static/styles.css" />
    <script>
        // On page load or when changing themes, best to add inline in `head` to avoid FOUC
        if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
        } else {
            document.documentElement.classList.remove('dark')
        }
    </script>
  </head>
  <body class="min-h-screen bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100">
    <%- include('partials/header') %>
    <main class="max-w-5xl mx-auto px-4 py-6 pt-20 ">
      <%- include(content, locals) %>
    </main>
    <%- include('partials/footer') %>
    <script src="/static/vendor/flowbite/flowbite.min.js"></script>
    <script>if (typeof initFlowbite === 'function') initFlowbite();</script>
    <script src="/static/app.js"></script>
  </body>
  </html>
