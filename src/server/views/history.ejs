<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Sync History</title>
    <link rel="stylesheet" href="/static/styles.css" />
  </head>
  <body class="min-h-screen bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100">
    <%- include('partials/header') %>
    <main class="max-w-5xl mx-auto px-4 py-6">
      <h1 class="text-2xl font-semibold mb-4">Sync History</h1>
      <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
          <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
              <th class="px-6 py-3">Run ID</th>
              <th class="px-6 py-3">Status</th>
              <th class="px-6 py-3">Started</th>
              <th class="px-6 py-3">Finished</th>
              <th class="px-6 py-3">Changes</th>
              <th class="px-6 py-3">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (!runs || runs.length === 0) { %>
              <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <td class="px-6 py-4" colspan="6">No runs yet.</td>
              </tr>
            <% } else { %>
              <% runs.forEach((run) => { %>
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                  <td class="px-6 py-4 font-mono text-xs"><%= run.id %></td>
                  <td class="px-6 py-4">
                    <span class="px-2 py-1 rounded text-xs <%= run.status === 'failed' ? 'bg-red-100 text-red-800' : run.status === 'finished' ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>"><%= run.status %></span>
                  </td>
                  <td class="px-6 py-4"><%= run.startedAt ? formatDateTimeUK(run.startedAt) : '—' %></td>
                  <td class="px-6 py-4"><%= run.finishedAt ? formatDateTimeUK(run.finishedAt) : '—' %></td>
                  <td class="px-6 py-4"><%= run.changes?.length || 0 %></td>
                  <td class="px-6 py-4"><a class="text-blue-600 hover:underline" href="/history/<%= run.id %>">View</a></td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>
    <%- include('partials/footer') %>
    <script src="/static/vendor/flowbite/flowbite.min.js"></script>
  </body>
</html>
