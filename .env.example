## hcs-sync example environment
# Copy to .env and fill values

# Server
PORT=3000
LOG_LEVEL=info
PINO_PRETTY=1

# KashFlow API
# Prefer BASE_URL; KASHFLOW_BASE_URL is also supported.
BASE_URL=https://api.kashflow.com/v2
# Option A: provide a session token directly (KF_... or GUID)
SESSION_TOKEN=
#KASHFLOW_SESSION_TOKEN=
# Option B: username/password (and memorable word if requested) to obtain a session token
USERNAME=
PASSWORD=
MEMORABLE_WORD=

# HTTP client
HTTP_TIMEOUT_MS=30000
CONCURRENCY=4

# MongoDB (optional upsert target)
# Provide a standard MongoDB connection string and DB name to enable upserts
# Example: mongodb://localhost:27017
MONGO_URI=
MONGO_DB_NAME=